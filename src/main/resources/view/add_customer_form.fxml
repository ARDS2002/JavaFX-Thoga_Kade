<AnchorPane prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: #696969;"
            xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AddCustomerFormController">
    <children>
        <Pane layoutX="17.0" layoutY="14.0" prefHeight="46.0" prefWidth="265.0">
            <children>
                <Label layoutY="6.0" text="ADD CUSTOMER FORM">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                    <textFill>
                        <LinearGradient endX="1.0" endY="1.0" startX="1.0" startY="0.37121209231289953">
                            <stops>
                                <Stop>
                                    <color>
                                        <Color red="0.15009745955467224" green="0.7075048685073853"
                                               blue="0.7368420958518982"/>
                                    </color>
                                </Stop>
                                <Stop offset="0.1878048780487805">
                                    <color>
                                        <Color red="0.15330000221729279" green="0.7011650204658508"
                                               blue="0.7300000190734863"/>
                                    </color>
                                </Stop>
                                <Stop offset="1.0">
                                    <color>
                                        <Color red="1.0" green="1.0" blue="1.0"/>
                                    </color>
                                </Stop>
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Label>
            </children>
        </Pane>
        <JFXTextField fx:id="txtCustomerID" editable="false" focusColor="#1a1b1b" layoutX="160.0" layoutY="75.0"
                      prefHeight="26.0" prefWidth="125.0"
                      style="-fx-background-color: #C0C0C0; -fx-background-radius: 5;"/>
        <JFXComboBox fx:id="cmbCustomerTitle" focusColor="#04f2e2" layoutX="72.0" layoutY="132.0" promptText="Title"
                     style="-fx-background-color: #C0C0C0; -fx-background-radius: 5;" unFocusColor="#4d4d4d"/>
        <DatePicker fx:id="dateCustomerDOB" layoutX="72.0" layoutY="312.0" promptText="Date of Birth"
                    style="-fx-background-color: #C0C0C0; -fx-background-radius: 5;"/>
        <JFXTextField fx:id="txtCustomerName" focusColor="#04f2e2" layoutX="73.0" layoutY="174.0" promptText="Name"
                      style="-fx-background-color: #C0C0C0; -fx-background-radius: 5;"/>
        <JFXTextField fx:id="txtCustomerAddress" focusColor="#04f2e2" layoutX="73.0" layoutY="221.0"
                      promptText="Address" style="-fx-background-color: #C0C0C0; -fx-background-radius: 5;"/>
        <JFXTextField fx:id="txtCustomerContactNumber" focusColor="#04f2e2" layoutX="73.0" layoutY="268.0"
                      promptText="Contact Number" style="-fx-background-color: #C0C0C0; -fx-background-radius: 5;"/>
        <JFXButton layoutX="223.0" layoutY="357.0" onAction="#btnAddCustomerOnAction" prefHeight="11.0" prefWidth="66.0"
                   style="-fx-background-color: #04f2e2; -fx-background-radius: 5;" text="Add">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </JFXButton>
        <ImageView fitHeight="3205.0" fitWidth="20.0" layoutX="17.0" layoutY="360.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../img/add-user.png"/>
            </image>
        </ImageView>
    </children>
</AnchorPane>
